{% use "form_div_layout.html.twig" %}

{% block embedded_money_widget %}
    <div class="input-group">
        {{ form_widget(form.amount, {
            attr: {
                class: 'form-control'
            }
        }) }}
        {% if form.currency is defined %}
            {{ form_widget(form.currency, {
                attr: {
                    class: 'form-control'
                }
            }) }}
        {% elseif form.vars.currency %}
            <span class="input-group-text">{{ form.vars.currency }}</span>
        {% endif %}
    </div>
{% endblock %}